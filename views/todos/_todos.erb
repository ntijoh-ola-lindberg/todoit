<h1>Todo</h1>
<article class="todos active-todos"> 
<% @todos.each do |todo| %>
    <% if todo['is_completed'] == 0 %>
        <%= erb :'todos/_todo', locals: { todo: todo } %>
    <% end %>
<% end %>
</article>

